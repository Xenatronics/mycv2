{% block js %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<script src="{{asset('/build/js/common.js')}}"></script>
	<script src="https://unpkg.com/imask"></script>
	
	<script>
		let myPayment = bootstrap.Modal.getOrCreateInstance('#modal-payment');		
			function onPayment(action){
				switch(action){
					case "info":						
						window.location.href="/user/payment/info";
					break;
					case "gift":						
						window.location.href="/user/payment/gift";
					break;
					case "add":
						myPayment.show();
					break;
					case "payout":
						window.location.href="/user/payment/payout-method";
					break;
				}
			}
		
		document.addEventListener("DOMContentLoaded", function(event) { 
			
			let cardInput=document.getElementById('payment_form_numberCard');
			let expireInput=document.getElementById('payment_form_expireDate');
			let maskCard=null;
			let maskExpire=null;
			
			if (maskCard == null) 
				maskCard = IMask(cardInput, maskCardOptions);
				
			if (maskExpire == null) 
				maskExpire = IMask(expireInput, maskExpireOptions);
			
		});
		

	</script>

{% endblock %}
